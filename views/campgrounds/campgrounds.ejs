<% include ../partials/header %>


<div class="container">
   <header class="jumbotron">
      <div class="container">
         <h1>Welcome To kAmp</h1>
            <p> Our hand-picked campgrounds from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Campground</a></p>
      </div>
   </header>
   <div class="row text-center" style="display:flex; flex-wrap:wrap;">
      <% campgrounds.forEach(function(campground){ %>
       <div class="col-md-3 col-sm-6 d-flex align-items-stretch">


            <div class="card" style="width: 100%;">
                <img class="card-img-top" style="width: 100%;height: 15vw;object-fit: cover;" src="<%=campground.image %>">
                <div class="card-body">
                <h5 class="card-title"><%=campground.name %></h5>
                <p>
                   <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
                </div>
            </div>
  </div>
     <% }); %> 
 </div>



</div>

<% include ../partials/footer %>